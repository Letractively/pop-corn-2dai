<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>popcorn.controlador.ComentarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>crear_usuario</servlet-name>
        <servlet-class>popcorn.controlador.UsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crear_usuario</servlet-name>
        <url-pattern>/crear_usuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>popcorn.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>pelicula</servlet-name>
        <servlet-class>popcorn.controlador.PeliculaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pelicula</servlet-name>
        <url-pattern>/crear</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>Rating</servlet-name>
        <servlet-class>popcorn.controlador.ValoracionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rating</servlet-name>
        <url-pattern>/rating</url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>inicio.jsp</welcome-file>
	</welcome-file-list>
</web-app>
